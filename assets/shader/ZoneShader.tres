code = "shader_type spatial;
render_mode unshaded, blend_mul;

uniform sampler2D center_points : hint_black;
uniform sampler2D radiuses : hint_black;
uniform int active_points = 0;

const int POINT_COUNT = 100;

const float CENTER_RADIUS = 19.9;
const float RADIUS = 190.0;
const float BORDER_RADIUS = 191.0;

//float min_dist(vec3 point) {
//	float dist = 10001.0;
//	for (int i = 0; i < active_points; i++) {
//		vec3 center_point = texture(center_points, vec2(float(i)/100.0, 0.5)).xyz;
//		dist = min(dist, distance(point, center_point));
//	}
//	return dist;
//}

vec3 in_radius(vec3 point) {
	float dist = 10001.0;
	float in_radius = 0.0;
	float in_border = 0.0;
	for (int i = 0; i < active_points; i++) {
		vec3 center_point = texture(center_points, vec2(float(i)/100.0, 0.5)).xyz;
		float this_radius = texture(radiuses, vec2(float(i)/100.0, 0.5)).x;
		float this_dist = distance(point, center_point);
		dist = min(dist, this_dist);
		
		in_radius = max(in_radius, (1.0 - step(this_radius, this_dist)));
		in_border = max(in_border, (1.0 - step(this_radius + 1.0, this_dist)));
	}
	in_border *= 1.0 - in_radius;
	return vec3(in_radius, in_border, dist);
	
}

void fragment() {
	vec3 world_point = (CAMERA_MATRIX * vec4(VERTEX, 1.0)).xyz;
	
//	float dist = min_dist(world_point);
//	float in_radius = step(RADIUS, dist);
//	float in_border = (1.0 - step(BORDER_RADIUS, dist)) - (1.0 - in_radius);
	vec3 radius_border = in_radius(world_point);
	
	float radius_val = 1.0 - radius_border.x;
	float border_val = 3.0 * radius_border.y;
	float radius_or_border = max(radius_val, border_val);
	
	ALBEDO.rgb = vec3(1.0);
	ALBEDO.r = max(0.54, max( (1.0 - step(CENTER_RADIUS, radius_border.z)) * 1.2, radius_or_border ));
	ALBEDO.g = max(0.03, radius_val);
	ALBEDO.b = max(0.44, radius_val);
}"

